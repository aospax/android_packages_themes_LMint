<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayRatingBarSmall">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:maxHeight">@dimen/play_rating_bar_small_height</item>
        <item name="android:progressDrawable">@drawable/play_ratingbar_small</item>
        <item name="android:minHeight">@dimen/play_rating_bar_small_height</item>
        <item name="android:thumb">@null</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>
	<style name="PlayCardDescription" parent="@style/PlayPlainText">
        <item name="android:textSize">@dimen/play_medium_size</item>
        <item name="android:textColor">@color/play_tertiary_text</item>
        <item name="android:singleLine">false</item>
        <item name="lastLineOverdrawColor">#00000000</item>
    </style>
    <style name="PlayPlainText">
        <item name="android:fontFamily">sans</item>
    </style>

</resources>
