<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CakemixTheme" parent="@*android:style/Theme.Holo.Light">
        <item name="android:textColorPrimary">@color/default_text_color</item>
        <item name="android:buttonStyle">@*android:style/Widget.Holo.Light.Button</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">0.0dip</item>
        <item name="android:dropDownListViewStyle">@style/ActionBar.DropDownListView</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionDropDownStyle">@style/ActionBar.DropDown</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionModeCloseButton</item>
        <item name="android:actionBarItemBackground">@drawable/state_selector_background</item>
        <item name="icMenuAddCollaborator">@drawable/ic_menu_add_collaborator</item>
        <item name="icMenuMove">@drawable/ic_menu_move</item>
        <item name="icMenuOffline">@drawable/ic_menu_offline</item>
        <!-- New Addon -->
        <item name="android:listSeparatorTextViewStyle">@style/CakemixListSeperator</item>
        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
        <item name="android:editTextStyle">@style/Widget.Holo.EditText</item>
    </style>

    <style name="CakemixListSeperator" parent="@*android:style/Widget.Holo.Light.TextView.ListSeparator">
		<item name="android:textColor">@color/cakemix_color</item>
    </style>

    <style name="CakemixTheme.Preferences" parent="@*android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <!-- New Addon -->
        <item name="android:listSeparatorTextViewStyle">@style/CakemixListSeperator</item>
        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
        <item name="android:editTextStyle">@style/Widget.Holo.EditText</item>
    </style>

    <style name="ActionBar.DropDownListView" parent="@*android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/state_selector_background</item>
    </style>

    <style name="ActionBar.DropDown" parent="@*android:style/Widget.Holo.Spinner">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">1.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
    </style>

    <style name="ActionModeCloseButton" parent="@*android:style/Widget.ActionButton.CloseMode">
        <item name="android:background">@drawable/state_selector_background</item>
    </style>

    <style name="ActionBar" parent="@*android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/drv_ab_solid</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
    </style>

    <style name="ActionBar.Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20.0sp</item>
		<item name="android:textColor">#8c000000</item>
    </style>

    <style name="Widget.Holo.EditText" parent="@*android:style/Widget.Holo.Light.EditText">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/edit_text_holo_light</item>
    </style>
</resources>
