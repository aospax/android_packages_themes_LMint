<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PeopleTheme1" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/theme_text_primary_light</item>
        <item name="android:textColorSecondary">@color/theme_text_primary_dark</item>
        <item name="android:actionBarStyle">@style/ContactsActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/ContactsActionBarTabView</item>
		<item name="android:actionBarWidgetTheme">@style/ActionBarWidget</item>
    </style>
    <style name="ContactsPreferencesTheme" parent="@*android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ContactsActionBarPreferenceStyle</item>
    </style>
    <style name="ContactsActionBarStyle" parent="@android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_solid_custom_blue_inverse_holo</item>
        <item name="android:backgroundSplit">@null</item>
        <item name="android:backgroundStacked">@drawable/ab_solid_custom_blue_inverse_holo</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Contacts.ActionBar.Title</item>
        <item name="android:displayOptions"></item>
    </style>
    <style name="ContactsActionBarPreferenceStyle" parent="@*android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@*android:color/transparent</item>
        <item name="android:background">@drawable/ab_solid_custom_blue_inverse_holo</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Contacts.ActionBar.Title</item>
    </style>
    <style name="ContactsActionBarTabView" parent="@*android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@color/action_bar_background</item>
    </style>
    <style name="ActionBarWidget" parent="@*android:style/Theme.Holo.Light">
   	    <item name="android:textColorPrimary">#de000000</item>
        <item name="android:textColorSecondary">#ffffffff</item>
        <item name="android:textColorTertiary">#ffffffff</item>
		<item name="android:titleTextStyle">@style/TextAppearance.Contacts.ActionBar.Title</item>
		<item name="android:textColorHint">#ffffffff</item>
    </style>
    <style name="TextAppearance.Contacts.ActionBar.Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20.0dp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="DirectoryHeaderStyle" parent="@*android:style/TextAppearance.Small">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/people_app_alt_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="SectionHeaderStyle" parent="@*android:style/TextAppearance.Small">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/people_app_alt_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
