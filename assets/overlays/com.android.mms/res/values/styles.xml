<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MmsHoloTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MmsActionBarStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:windowBackground">@drawable/window_bg</item>
        <item name="android:listSeparatorTextViewStyle">@style/MmsListSeperator</item>
    </style>
    <style name="MmsActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="android:background">@drawable/mms_ab_solid</item>
        <item name="android:backgroundSplit">@null</item>
        <item name="android:titleTextStyle">@style/MmsActionBarText</item>
    </style>

    <style name="MmsActionBarText" parent="@*android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MmsListSeperator" parent="@*android:style/Widget.Holo.Light.TextView.ListSeparator">
		<item name="android:textColor">@color/app_color</item>
    </style>

</resources>
