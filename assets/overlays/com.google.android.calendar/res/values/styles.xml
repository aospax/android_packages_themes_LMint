<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="CalendarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CalendarTheme.WithActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:startYear">1970</item>
        <item name="android:endYear">2036</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/CalendarActionBarStyle</item>
    </style>
    <style name="CalendarActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
	    <item name="android:background">@color/ab_color</item>
        <item name="android:displayOptions">none</item>
        <item name="android:backgroundStacked">@color/ab_color</item>
        <item name="android:backgroundSplit">@color/ab_color</item>
    </style>

</resources>
