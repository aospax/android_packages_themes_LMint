<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="CalendarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/CalendarActionBarStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:windowBackground">@drawable/window_bg</item>
    </style>
    <style name="CalendarTheme.WithActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:startYear">1970</item>
        <item name="android:endYear">2036</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/CalendarActionBarStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:windowBackground">@drawable/window_bg</item>
        <item name="android:windowContentOverlay">@*common:drawable/shadow</item>
    </style>
    <style name="CalendarActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
	    <item name="android:background">@drawable/cal_ab_solid</item>
        <item name="android:displayOptions">none</item>
        <item name="android:backgroundStacked">@drawable/cal_ab_solid</item>
        <item name="android:backgroundSplit">@drawable/cal_ab_solid</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CalendarActionBarStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:windowBackground">@drawable/window_bg</item>
    </style>
    <style name="EditEvent_Layout" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CalendarActionBarStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:windowBackground">@drawable/window_bg</item>
    </style>

</resources>
