<?xml version="1.0" encoding="utf-8"?>
<resources>
 
    <style name="ListViewStyle" parent="@*android:style/Widget.Holo.Light.ListView">
        <item name="android:overScrollMode">always</item>
    </style>
    <style name="DialtactsSearchboxStyle" parent="@*android:style/Widget.EditText">
        <item name="android:textColorHint">@color/searchbox_text_color</item>
        <item name="android:background">@null</item>
    </style>
    <style name="DialtactsTheme1" parent="@*android:style/Theme.Holo.Light">
    	<item name="android:textColorPrimary">@color/dialtact_primary_text</item>
        <item name="android:textColorSecondary">@color/dialtact_secondary_text</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/searchbox_background_color</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:actionBarStyle">@style/DialtactsActionBarStyle</item>
        <item name="android:actionBarTabBarStyle">@style/DialtactsActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/DialtactsActionBarTabTextStyle</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:editTextStyle">@style/DialtactsSearchboxStyle</item>
	</style>
    <style name="CallDetailActivityTheme1" parent="@*android:style/Theme.Holo.Light">
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:gravity">top</item>
        <item name="android:actionBarStyle">@style/DialtactsLogActionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
	<style name="DialtactsActionBarTabBarStyle" parent="@*android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:background">@drawable/action_bar_tab</item>
        <item name="android:divider">@null</item>
        <item name="android:showDividers">none</item>
    </style>
    <style name="DialtactsActionBarTabTextStyle" parent="@*android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/tab_text_color</item>
    </style>
    
    <style name="DialtactsActionBarStyle" parent="@*android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@*android:color/transparent</item>
        <item name="android:background">@drawable/call_history_actionbar_background</item>
        <item name="android:titleTextStyle">@style/DialtactsActionBarTitleText</item>
        <item name="android:backgroundStacked">#ffffffff</item>
    </style>
    <style name="DialtactsLogActionBarStyle" parent="@*android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@*android:color/transparent</item>
        <item name="android:background">@drawable/call_history_actionbar_background</item>
        <item name="android:backgroundStacked">@color/actionbar_background_color</item>
        <item name="android:titleTextStyle">@style/DialtactsActionBarTitleText</item>
    </style>
    <style name="DialtactsActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>

	<style name="VerticalSeparator">
        <item name="android:background">#00000000</item>
        <item name="android:layout_width">2.0dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

</resources>
